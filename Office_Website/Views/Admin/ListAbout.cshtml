@using Office_Website.Models.Class
@model List<About>
@{
    ViewBag.Title = "GetAbout";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Hakkımza Sayfası</h2>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
        <div class="body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered nowrap" cellspacing="0" style="width:100%;">
                    <tr>
                        <th>Foto Url</th>
                        <th>Biz Kimiz</th>
                        <th>Çalışma Alanlarımız</th>
                        <th>Düzenlenme Tarih</th>
                        <th>İşlemler</th>
                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <th>@x.FotoUrl</th>
                            <th>@Html.Raw(x.aciklama)</th>
                            <th>@Html.Raw(x.aciklama2)></th>
                            <th>@x.CreatedAt</th>
                            <th>
                                <span class="btn bg-cyan waves-effect"><a href="/About/" title="Detayı Gör"> <i class="material-icons"> folder</i></a> </span>
                                <a class="btn bg-purple waves-effect" href="/Admin/GetAbout/@x.Id" title="Güncelle">  <i class="material-icons">update</i></a>
                                
                                
                            </th>
                        </tr>

                    }
                </table>
            </div>
        </div>
    </div>
</div>

