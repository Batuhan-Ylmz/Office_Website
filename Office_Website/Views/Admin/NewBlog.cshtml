@model  Office_Website.Models.Class.Blog
@{
    ViewBag.Title = "NewBlog";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using Office_Website.Models.Class
@{
    Admin admin = Session["Kullanici"] as Admin;
}
<script src="~/ckeditor/ckeditor.js"></script>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Yeni Blog Ekleme Sayfası
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="body">
                <form class="form-group" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="hidden" name="AdminID" value="@admin.Id" />
                    </div>

                    @Html.LabelFor(x => x.BlogResmi)
                    <div class="form-group">
                        <div class="form-line">
                            @Html.EditorFor(x => x.BlogResmi, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    @Html.LabelFor(x => x.Konu)
                    <div class="form-group">
                        @Html.DropDownListFor(m => m.Konu.Id, (List<SelectListItem>)ViewBag.vl)
                    </div>
                    @Html.LabelFor(x => x.Baslik)
                    <div class="form-group">
                        <div class="form-line">
                            @Html.TextAreaFor(x => x.Baslik, new { @id = "Baslik", @class = "form-control" }) @Html.ValidationMessageFor(x => x.Baslik, "", new { @class = "text-danger" })
                            <script>
                                CKEDITOR.replace("Baslik");
                            </script>
                        </div>
                    </div>
                    @Html.LabelFor(x => x.aciklama)
                    <div class="form-group">
                        <div class="form-line">
                            @Html.TextAreaFor(x => x.aciklama, new { @id = "aciklama", @class = "form-control", @rows = "500" }) @Html.ValidationMessageFor(x => x.aciklama, "", new { @class = "text-danger" })
                            <script>
                                CKEDITOR.replace("aciklama");
                                CKEDITOR.class("hello");
                            </script>
                        </div>
                    </div>
                    <br>
                    <div align="center">
                        <button class="btn btn-success m-t-15 waves-effect"> Blog Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

