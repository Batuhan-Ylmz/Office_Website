@model Office_Website.Models.Class.Topic
@{
    ViewBag.Title = "NewTopic";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Yeni Konu Ekleme Sayfası
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="body">
                <form class="form-group" method="post">
                    <label>Konu Resmi</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.EditorFor(x => x.KonuResim, new { htmlAttributes = new { @class = "form-control", @maxlength = "100", @required = "reguired" } })
                        </div>
                    </div>
                    <label>Konu Adı</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.EditorFor(x => x.KonuAD, new { htmlAttributes = new { @class = "form-control", @maxlength = "100", @required = "reguired" } })
                        </div>
                    </div>
                    <label>Konu Açıklaması</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.EditorFor(x => x.KonuAciklama, new { htmlAttributes = new { @class = "form-control", @maxlength = "100", @required = "reguired" } })
                        </div>
                    </div>
                    <div align="center">

                        <button class="btn btn-success m-t-15 waves-effect"> Konu Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

