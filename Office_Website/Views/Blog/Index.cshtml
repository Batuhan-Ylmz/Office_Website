@using Office_Website.Models.Class;
@using System.Text.RegularExpressions;
@using PagedList.Mvc;
@using PagedList;
@model  PagedList.IPagedList<Blog>


@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="inner-banner has-base-color-overlay text-center" style="background: url(/Content/Site/images/blog/ensonblog.jpg); background-repeat:no-repeat; background-size:cover;">
    <div class="container">
        <div class="box">
            <h3>Blog Yazılarımız</h3>
        </div><!-- /.box -->
    </div><!-- /.container -->
</div>

<div class="sidebar-page-container">
    <div class="container">

        <div class="row" style="margin-bottom:-105px;">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <section class="news-section padd-2">
                    <div class="row">
                        @foreach (var x in Model)
                        {
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <!--News Style One-->
                                <div class="news-style-one">
                                    <div class="inner-box">
                                        <div class="image">
                                            <img src="@Url.Content(x.BlogResmi)" alt="" style="height:250px; width:350px">
                                            <div class="post-time">@x.CreatedAt</div>
                                        </div>
                                        <div class="lower-content">
                                            <h4><a href="/Blog/Blogdetail/@x.Id">@Html.Raw(x.Baslik)</a></h4>
                                            <br></br>
                                            <div class="btn-style-two">
                                                <a href="/Blog/Blogdetail/@x.Id">Devamını Oku</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        }
                    </div>


                    <br>



                    <div style="margin-top:-50px; margin-left:100px; ">
                        @Html.PagedListPager(Model, Page => Url.Action("Index", new { page = Page }))
                    </div>
                    <style>
                        .pagination {
                            background-color: crimson;
                            font-size: 15px;
                            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
                        }
                    </style>

                </section>


            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="blog-sidebar padd-4">
                    <div class="sidebar_search sidebar-padd mar-1">
                        <form action="#">
                            <input type="text" placeholder="Search....">
                            <button class="tran3s color1_bg"><i class="fa fa-search" aria-hidden="true"></i></button>
                        </form>
                    </div>

                    @Html.Action("Titles", "Blog")

                    @Html.Action("Popular", "Blog")
                </div>
            </div>


        </div>

    </div>

</div>