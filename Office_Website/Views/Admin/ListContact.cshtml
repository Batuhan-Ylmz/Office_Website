@using Office_Website.Models.Class
@model List<Address>
@{

    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Hakkımza Sayfası</h2>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
        <div class="body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered nowrap" cellspacing="0" style="width:100%;">
                    <tr>
                        <th>Başlık</th>
                        <th>Mail</th>
                        <th>Telefon</th>
                        <th>Konum</th>
                        <th>Açık Adres</th>
                        <th>Çalışma Saatleri</th>
                        <th>İşlemler</th>
                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <th>@x.Başlık</th>
                            <th>@x.mail</th>
                            <th>@x.telefon</th>
                            <th>@x.konum.Substring(0, 10)</th>
                            <th>@x.AcıkAdress</th>
                            <th>@x.openhours</th>
                            <th>
                                <span class="btn bg-cyan waves-effect"><a href="/Contact/" title="Detayı Gör"> <i class="material-icons"> folder</i></a> </span>
                                <a class="btn bg-purple waves-effect" href="/Admin/GetContact/@x.Id" title="Güncelle">  <i class="material-icons">update</i></a>
                            </th>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
