@model Office_Website.Models.Class.TopicBlog
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="inner-banner has-base-color-overlay text-center" style="background: url(/Content/Site/images/background/kesilen.jpg); background-repeat: no-repeat; background-size:cover;">
    <div class="container">
        @foreach (var x in Model.Deger1)
        {
            <div class="box">
                <h3><font color="white">@x.KonuAD</font></h3>
            </div><!-- /.box -->
        }
    </div><!-- /.container -->
</div>

<div class="sidebar-page-container">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">


                <section class="blog-section padd-2">
                    <div class="large-blog-news single-blog-post single-blog wow fadeInUp animated" style="visibility: visible; animation-name: fadeInUp;">
                        @foreach (var x in Model.Deger1)
                        {
                            <div class="img-box">
                                <img src="@x.KonuResim" alt="News" style="width:500px ; height:285px">
                            </div>
                            <div class="lower-content">
                                <h4><a href="#">@x.KonuAD</a></h4>
                                <div class="text">
                                    <p>
                                        @Html.Raw(x.KonuAciklama)
                                    </p>
                                </div>
                            </div>
                        }
                    </div>

                </section>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="blog-sidebar padd-4">
                    <div class="sidebar_search sidebar-padd mar-1">
                        <form action="#">
                            <input type="text" placeholder="Search....">
                            <button class="tran3s color1_bg"><i class="fa fa-search" aria-hidden="true"></i></button>
                        </form>
                    </div>

                    @Html.Action("Topictitles", "Topic")

                    <div id="test2">
                        <div class="popular_news sidebar-padd mar-1">
                            <div class="inner-title">
                                <h3>Son Gönderilenler</h3>
                            </div>
                            @foreach (var x in Model.Deger2)
                            {
                                <div class="popular-post">
                                    <div class="item">

                                        <div class="post-thumb"><a href="#"><img src="@x.BlogResmi" alt=""></a></div>
                                        <h4><a href="/Blog/Blogdetail/@x.Id">@Html.Raw(x.Baslik)</a></h4>

                                        <div class="post-info">@x.CreatedAt</div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <br>
                    <br>
                </div>

            </div>
        </div>
    </div>
</div>

